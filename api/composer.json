{
		"name": "docker/symfony-setup",
		"description": "Base project",
    "type": "project",
    "license": "proprietary",
    "require": {
				"php": ">=7.2",
				"ext-PDO": "*",
				"ext-Phar": "*",
				"ext-Reflection": "*",
				"ext-SPL": "*",
				"ext-SimpleXML": "*",
				"ext-bcmath": "*",
				"ext-ctype": "*",
				"ext-curl": "*",
				"ext-date": "*",
				"ext-dom": "*",
				"ext-exif": "*",
				"ext-fileinfo": "*",
				"ext-filter": "*",
				"ext-ftp": "*",
				"ext-gd": "*",
				"ext-gmp": "*",
				"ext-hash": "*",
				"ext-iconv": "*",
				"ext-json": "*",
				"ext-libxml": "*",
				"ext-mbstring": "*",
				"ext-mysqlnd": "*",
				"ext-openssl": "*",
				"ext-pcre": "*",
				"ext-pdo_pgsql": "*",
				"ext-readline": "*",
				"ext-session": "*",
				"ext-soap": "*",
				"ext-tokenizer": "*",
				"ext-xml": "*",
				"ext-xmlreader": "*",
				"ext-xmlwriter": "*",
				"ext-xsl": "*",
				"ext-zip": "*",
				"ext-zlib": "*",
				"api-platform/core": "^2.5",
				"composer/package-versions-deprecated": "^1.11",
				"doctrine/annotations": "^1.0",
				"doctrine/doctrine-bundle": "^2.1",
				"doctrine/doctrine-migrations-bundle": "^3.0",
				"doctrine/orm": "^2.7",
				"gedmo/doctrine-extensions": "^3.0",
				"knplabs/knp-paginator-bundle": "^5.3",
				"nelmio/cors-bundle": "^2.1",
				"phpdocumentor/reflection-docblock": "^5.2",
				"predis/predis": "^1.1",
				"ramsey/uuid-doctrine": "^1.6",
				"sensio/framework-extra-bundle": "^5.1",
				"snc/redis-bundle": "^3.2",
				"symfony/asset": "4.4.*",
				"symfony/console": "4.4.*",
				"symfony/dotenv": "4.4.*",
				"symfony/expression-language": "4.4.*",
				"symfony/flex": "^1.3.1",
				"symfony/form": "4.4.*",
				"symfony/framework-bundle": "4.4.*",
				"symfony/http-client": "4.4.*",
				"symfony/intl": "4.4.*",
				"symfony/mailer": "4.4.*",
				"symfony/monolog-bundle": "^3.1",
				"symfony/process": "4.4.*",
				"symfony/property-access": "4.4.*",
				"symfony/property-info": "4.4.*",
				"symfony/security-bundle": "4.4.*",
				"symfony/serializer": "4.4.*",
				"symfony/swiftmailer-bundle": "^3.4",
				"symfony/translation": "4.4.*",
				"symfony/twig-bundle": "^4.4",
				"symfony/validator": "4.4.*",
				"symfony/web-link": "4.4.*",
				"symfony/yaml": "4.4.*",
				"twig/extra-bundle": "^2.12|^3.0",
				"twig/twig": "^2.12|^3.0"
		},
    "require-dev": {
				"brianium/paratest": "^2.1",
				"dg/bypass-finals": "^1.1",
				"edgedesign/phpqa": "^1.19",
				"escapestudios/symfony2-coding-standard": "^3.4",
				"friendsofphp/php-cs-fixer": "^2.13",
				"jakub-onderka/php-parallel-lint": "^1.0",
				"phpmd/phpmd": "^2.6",
				"phpro/grumphp": "^0.14",
				"phpspec/prophecy": "^1.7",
				"phpstan/phpstan": "^0.12.44",
				"phpstan/phpstan-doctrine": "^0.12.19",
				"phpstan/phpstan-strict-rules": "^0.12.5",
				"phpstan/phpstan-symfony": "^0.12.7",
				"povils/phpmnd": "^2.0",
				"sebastian/phpcpd": "^4.0",
				"sensiolabs/security-checker": "^5.0",
				"slevomat/coding-standard": "~5.0",
				"squizlabs/php_codesniffer": "^3.3",
				"symfony/maker-bundle": "^1.7",
				"symfony/profiler-pack": "^1.0",
				"symfony/test-pack": "^1.0",
				"vimeo/psalm": "^3.0",
        "symfony/browser-kit": "^4.4",
        "symfony/css-selector": "^4.4",
        "symfony/debug-bundle": "^4.4",
        "symfony/phpunit-bridge": "^5.1",
        "symfony/stopwatch": "^4.4",
        "symfony/var-dumper": "^4.4",
        "symfony/web-profiler-bundle": "^4.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
					"App\\Tests\\": "tests/phpunit"
				}
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
				"code-check": [
					"vendor/squizlabs/php_codesniffer/bin/phpcs --config-set installed_paths vendor/escapestudios/symfony2-coding-standard",
					"bin/grumphp run",
					"@phpunit"
				],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
				"dump-container": [
					"php bin/console container:dump"
				],
				"develop": [
					"COMPOSER_MEMORY_LIMIT=-1 composer install",
					"COMPOSER_MEMORY_LIMIT=-1 composer dump-autoload --optimize --classmap-authoritative --ansi",
					"php bin/console security:check",
					"php bin/console doctrine:cache:clear-metadata",
					"php bin/console doctrine:schema:update --force --dump-sql",
					"php bin/console assets:install",
					"rm -rf var/cache",
					"php -d memory_limit=-1 bin/console cache:clear --no-warmup --ansi",
					"php bin/console cache:warmup",
					"set -a && . ./.env && redis-cli -u $REDIS_URL FLUSHALL",
					"set -a && . ./.env && redis-cli -u $REDIS_SESSION_URL FLUSHALL"
				],
				"coverage": [
					"composer dump-autoload",
					"rm -rf tests/reports/coverage/",
					"rm -rf var/cache",
					"php -d memory_limit=-1 bin/console cache:clear",
					"vendor/brianium/paratest/bin/paratest -p12 -c rulesets --phpunit=vendor/bin/phpunit tests/phpunit --coverage-html tests/reports/coverage/"
				],
				"phpunit": [
					"composer dump-autoload",
					"vendor/brianium/paratest/bin/paratest -p12 -c rulesets --phpunit=vendor/bin/phpunit tests/phpunit/"
				],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    }
}
