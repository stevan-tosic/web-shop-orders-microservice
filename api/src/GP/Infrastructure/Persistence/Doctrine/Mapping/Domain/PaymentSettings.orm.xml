<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\GP\Domain\Entity\PaymentSettings" table="payment_settings">

    <unique-constraints>
      <unique-constraint name="payment_language" columns="payment_id,language_id"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="link" type="string" column="link" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="activeFooter" type="boolean" column="active_footer" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <many-to-one field="language" target-entity="Languages" fetch="LAZY">
      <join-columns>
        <join-column name="language_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="payment" target-entity="Payment" fetch="LAZY">
      <join-columns>
        <join-column name="payment_id" referenced-column-name="ID"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
