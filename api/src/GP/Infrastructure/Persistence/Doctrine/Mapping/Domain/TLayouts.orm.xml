<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\GP\Domain\Entity\TLayouts" table="layouts">

    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="desktopTemplateId" type="integer" column="desktop_template_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="mobileTemplateId" type="integer" column="mobile_template_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="sortOrder" type="integer" column="sort_order" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-one field="host" target-entity="THosts" fetch="LAZY">
      <join-columns>
        <join-column name="host_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="image" target-entity="TLayoutImages" fetch="LAZY">
      <join-columns>
        <join-column name="image_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
