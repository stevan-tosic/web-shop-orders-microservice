<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\GP\Domain\Entity\TReceiptDetails" table="t_receipt_details">

    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="isUsingOrderTax" type="boolean" column="is_using_order_tax" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="isNegativeAmount" type="boolean" column="is_negative_amount" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <many-to-one field="receiptAccount" target-entity="TReceiptAccounts" fetch="LAZY">
      <join-columns>
        <join-column name="receipt_account_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="tax" target-entity="TTaxes" fetch="LAZY">
      <join-columns>
        <join-column name="tax_id" referenced-column-name="ID"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="receipt" target-entity="TReceipts" fetch="LAZY">
      <join-columns>
        <join-column name="receipt_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
