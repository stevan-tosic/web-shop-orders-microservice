<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\GP\Domain\Entity\THosts" table="t_hosts">
    <indexes>
      <index name="t_hosts_default_layout_id_index" columns="default_layout_id"/>
      <index name="t_hosts_host_group_id_index" columns="host_group_id"/>
      <index name="t_hosts_language_id_index" columns="language_id"/>
      <index name="t_hosts_prioriy" columns="priority"/>
    </indexes>

    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="host" type="string" column="host" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="shortName" type="string" column="short_name" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="languageId" type="integer" column="language_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="hostGroupId" type="integer" column="host_group_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="defaultLayoutId" type="integer" column="default_layout_id" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">1</option>
      </options>
    </field>
    <field name="hasBillLogo" type="boolean" column="has_bill_logo" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="popularityDays" type="string" column="popularity_days" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="defaultCheckoutLayoutId" type="integer" column="default_checkout_layout_id" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="priority" type="integer" column="priority" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="default">50</option>
      </options>
    </field>
    <field name="choEnabled" type="boolean" column="cho_enabled" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
